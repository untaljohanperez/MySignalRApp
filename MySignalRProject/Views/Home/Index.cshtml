@{
    ViewBag.Title = "Home Page";
}
@section scripts {

    <script src="~/signalr/js"></script>
    <script>
        $(document).ready(function () {
            var connection = $.connection.hub;
            var hub = null;
            connection.start()
                .fail(function () { console.log("no"); })
                .done(function () {
                    console.log("yes");
                    var hub = $.connection.helloWorldHub;
                    hub.server.helloWorldEverybody("Hola");
                });

            $.connection.helloWorldHub.client.showMessage = function (msg) {
                console.log(msg, "message");
            };

        });
        //Ctrl + k, d
    </script>
}
